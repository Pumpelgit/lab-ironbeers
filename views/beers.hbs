<div class="row row-cols-3">
    <div class="container">
        <div class="col">
            {{#each beers}}
            <div class="card">
                <img src="{{image_url}}" alt="{{name}}">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                    <q>{{tagline}}</q>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>